<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/itemimageview"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_background"
        tools:layout_editor_absoluteX="106dp" />

    <TextView
        android:id="@+id/itemtextview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="@+id/itemimageview"
        app:layout_constraintStart_toEndOf="@+id/itemimageview"
        app:layout_constraintTop_toTopOf="@+id/itemimageview"
        app:layout_constraintVertical_bias="0.493" />

    <Button
        android:id="@+id/itembutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="@+id/itemtextview"
        app:layout_constraintStart_toEndOf="@+id/itemtextview"
        app:layout_constraintTop_toTopOf="@+id/itemtextview"
        app:layout_constraintVertical_bias="0.482" />
</androidx.constraintlayout.widget.ConstraintLayout>